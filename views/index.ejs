<% include header %>

<div class="container">
  <form method="POST">
    <div class="form-group">
      <label for="height">身高（公分）</label>
      <input type="number" step="0.01" class="form-control" id="height" name="height" value="<%=userdata.height%>">
    </div>
    <div class="form-group">
      <label for="weight">體重（公斤）</label>
      <input type="number"" step="0.01" class=" form-control" id="weight" name="weight" value="<%=userdata.weight%>">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <div class="alert alert-success" role="alert">
    BMI = <%= bmi.toFixed(2) %> <br> <%=userdata.msg %>
  </div>
</div>
<%- include('footer') %>